{% if section.settings["show-announcement"]  %}
<section>
    <div class="announcement-bar">
        <div class="announcement-bar-left-section">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | image_url }} " width="40" height="40" loading="lazy">
        {%  else %}
        <img src="{{ 'a.png' | asset_url }} " width="40" height="40" loading="lazy">

        {% endif %}
        {% if section.settings.image2 != blank %}
            <img src="{{ section.settings.image | image_url }} " width="40" height="40" loading="lazy">
          {%  else %}
          <img src="{{ 'b.png' | asset_url }} " width="40" height="40" loading="lazy">
  
          {% endif %}
        </div>
        <div class="announcement-bar-right-section">
          
            {% if section.block.size == 0  %}  
                <a href="#">Help</a>
                <a href="/account">Account</a>

            {% else %}

                {% for block in section.block  %}
                    <a href="{{ block.settings.link }}">{{ block.settings.text  }}</a>

                {% endfor %}
            {% endif %}
          
        </div>
    </div>
</section>
{% endif %}

<style>
    .announcement-bar{
        display: flex;
        justify-content: space-between;
        background: {{ section.settings.background }};
        color: {{ section.settings.text_color }};
    }
</style>

{% schema %}
    {
        "name": "Announcement Bar",
        "settings": [{
            "type": "checkbox",
            "id": "show-announcement",
            "label": "Show Announcement",
            "default": true
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Pick Image",
            "info": "Formato PNG es recomendado"
        },
        {
            "type": "image_picker",
            "id": "image2",
            "label": "Pick Image",
            "info": "Formato PNG es recomendado"
        },
        {
            "type": "color",
            "id": "background",
            "label": "Background",
            "info": "#F4F4F4"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text",
            "info": "#000000"
        }
         
    ],
    "blocks": [
        {
            "name": "Links",
            "type": "links",
            "limit": 4,
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text",
                    "default": "link"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
        "presets": []
    } 
{% endschema %}